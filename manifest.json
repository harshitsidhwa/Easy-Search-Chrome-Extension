{
  "manifest_version": 2,
  "name": "EasySearch",
  "version": "0.1",

  "browser_action":{
    "default_icon": "icon.png"
  },

  "background": {
    "scripts": ["background.js"]
  },

  "icons":{
      "64":"icon.png",
      "32":"icon.png",
      "16":"icon.png",
      "128":"icon.png"
    },

  "content_scripts": [
  {
    "matches": [ "<all_urls>" ],
    "js": ["jquery-2.1.3.min.js", "content.js"]
  }
  ],

  "permissions": ["tabs"]
}
